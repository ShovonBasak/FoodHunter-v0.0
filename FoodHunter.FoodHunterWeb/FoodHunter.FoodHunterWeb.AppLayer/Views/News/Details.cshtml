@using FoodHunter.Web.DataLayer
@model FoodHunter.FoodHunterWeb.AppLayer.ViewModels.Details.NewsDetailsViewModel

@{
    ViewBag.Title = "News Details";
    if (Session != null && Session["UserType"].ToString() == UserType.RestaurantAdmin.ToString())
    {
        Layout = "~/Views/Shared/_Layout_Restaurant_Admin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>News Details</h2>

<div>
    <hr />
        <div class="container well block">
            <div class="row">
                <div class="col-md-3 image text-center">
                    <h2> <img src="images/photo.jpg" alt="@Html.DisplayFor(model => model.NewsPicture)"></h2>
                </div>
                <div class="col-md-9">
                    <table>
                        <tr>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-9 no_pad">
                                        <h2>@Html.DisplayFor(model => model.Title)</h2>
                                    </div>
                                    <div class="col-md-3 no_pad date">
                                        <h4></h4>
                                    </div>
                                </div>
                            </div>
                        </tr>

                        <tr>
                            <p>@Html.DisplayFor(model => model.NewsBody)</p>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
</div>
<p>
    @Html.ActionLink("Back","Index","News")
</p>
